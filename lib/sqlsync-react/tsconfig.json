{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "Bundler",
    "lib": ["ES6", "DOM", "DOM.Iterable", "ES2021.WeakRef"],

    /* Compiling */
    "allowJs": true,
    "outDir": "dist",
    "declaration": true,
    "sourceMap": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"]
}
