    }
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build"
  },
  "devDependencies": {
    "@types/node": "^20.8.8",
    "vite-plugin-solid": "^2.7.0",
    "typescript": "^5.2.2",
