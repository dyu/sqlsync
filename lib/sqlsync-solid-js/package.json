    "vite-plugin-dts": "^3.6.1",
    "vite-tsconfig-paths": "^4.2.1",
    "vitest": "^0.34.6",
    "@solidjs/testing-library": "^0.8.4",
    "@testing-library/jest-dom": "^6.1.3"
  },
  "dependencies": {
    "@orbitinghail/sqlsync-worker": "0.2.0",
